[Unit]
Description=Consul server agent
Requires=network-online.target
After=network-online.target

[Service]
PermissionsStartOnly=true
ExecStart=agent \
    -config-file={{ consul_cfg }} \
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target